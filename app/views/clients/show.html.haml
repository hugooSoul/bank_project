%link{:crossorigin => "anonymous", :href => "https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :rel => "stylesheet"}/

%h2
    Client Name: #{@client}
    
%p
    Client Number: 
    %b #{@client.client_number}

